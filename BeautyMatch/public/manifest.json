{
    "manifest_version": 3,
    "name": "BeautyMatch",
    "version": "1.0.0",
    "description": "Analyze beauty product pages and flag Good‑Match, Caution or Not‑Recommended based on your skin profile.",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*.sephora.com/*",
        "https://*.nykaa.com/*",
        "https://*.amazon.in/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.sephora.com/*",
                "https://*.nykaa.com/*",
                "https://*.amazon.in/*"
            ],
            "js": [
                "src/content/scraper.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "onboarding.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}